<div class="col-sm-12 col-lg-4 mb-3">
  <div id="recipe-id-1">
    <div class="card"><%= image_tag 'sample.jpg', class: "card-img-top", width:"300", height:"200"%>
      <div class="card-body">
        <h4 class="card-title d-inline">
          <%= link_to recipe.title, recipe_path(recipe) %>
        </h4>
        <% if current_user.own?(recipe) %>
          <%= render 'crud_menus', recipe: recipe %>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item"><i class="far fa-user"></i><%= recipe.user.name %></li>
          <li class="list-inline-item"><i class="far fa-calendar"></i><%= l recipe.created_at, format: :long %></li>
        </ul>
        <p class="card-text"><%= recipe.body %></p>
      </div>
    </div>
  </div>
</div>

