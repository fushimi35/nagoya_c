<% content_for(:title, @recipe.title) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag 'sample.jpg', class: "card-img-top img-fluid", size: '300x200' %>
            </div>
            <div class='col-md-9'>
              <h3 style='display: inline;'><%= @recipe.title %></h3>
              <%= render 'crud_menus', recipe: @recipe if current_user.own?(@recipe)%>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@recipe.user.name}" %></li>
                <li class="list-inline-item"><%= l @recipe.created_at, format: :long %></li>
              </ul>
            </div>
          </div>
          <%= simple_format(@recipe.body) %>
        </div>
      </article>
    </div>
  </div>

</div>
