<h1>Recipe#new</h1>

<%= form_with model: @recipe, local: true do |f| %>
<div>
    <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
</div>
<div>
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 10 %>
</div>
    <%= f.submit 'レシピ投稿' %>
<% end %>
